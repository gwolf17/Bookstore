<!--Page containing the login form-->

<!--Set layout to null so it doesn't inherit from the shared layout-->
@{
    Layout = null;
}

<!--Connect to LoginModel-->
@model LoginModel

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Bookstore Login</title>
        <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    </head>

    <body>
        <!--Heading at top of page-->
        <div class="bg-dark text-white p-2">
            <span class="navbar-brand m-1-2">BOOKSTORE</span>
        </div>

        <div class="m-1 p-1">
            <!--Validation Error Text-->
            <div class="text-danger" asp-validation-summary="All"></div>

            <!--Login form-->
            <form method="post" asp-controller="Account" asp-action="Login">

                <div class="form-group">
                    <label asp-for="Username">User Name:</label>
                    <input asp-for="Username" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" class="form-control" type="password"/>
                </div>

                <button class="btn btn-primary" type="submit">Log In</button>

                <input type="hidden" asp-for="ReturnUrl" />

            </form>

        </div>
    </body>

</html>